<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>IanMBurns.com @ViewBag.Title

    </title>
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/Site/css")
    @Styles.Render("~/Content/bootstrap/base")
    @RenderSection("styles", false)
</head>
<body>
    <div id="topNav" class="navbar navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand" href="..\">IanMBurns<small>.com</small></a>
                <button class="navbar-toggle" type="button" data-toggle="collapse" data-target="#navbar-main">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <nav id="navbar-main" class="collapse navbar-collapse pull-right" role="navigation">
                <ul class="nav navbar-nav">
                    <li>
                        @Html.ActionLink("About Me", string.Empty, "About")
                    </li>
                    <li>
                        <a href="https://github.com/ianmburns" target="_blank">GitHub</a>
                    </li>
                    <li>
                        <a href="mailto:ianburns@ianmburns.com">Contact Me</a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
    <div id="wrap">
        @RenderSection("Header", false)

        <div class="container">
            <div id="main">
                @RenderBody()
            </div>
        </div>
    </div>
    <div id="footer">
        <div class="container">
            <p class="text-right">
                This website was created by Ian Burns - 2013
            </p>
        </div>
    </div>
    
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/scrollto")
    @RenderSection("scripts", required: false)
</body>
</html>
